git_branch() {
  local branch=$(git rev-parse --abbrev-ref HEAD 2> /dev/null)
  if [[ -n $branch ]]; then
    echo -e "($branch)"
  fi
}

prompt_symbol() {
  if [ "$USER" = "root" ]; then
    printf "%s" "#";
  else
    printf "%s" "\$"
  fi
}

# Ensure that we're in bash
if [ -n "$BASH" ]; then
  PS1="${debian_chroot:+($debian_chroot)}\[\e[38;5;202m\]\@ | \[\e[38;5;245m\]\u\[\e[00m\]@\[\e[38;5;172m\]\h \[\e[0m\]\W\[\e[38;5;202m\]\$(git_branch)\[\e[0m\]\$(prompt_symbol) "
  export GREP_COLORS="ms=01;38;5;202:mc=01;31:sl=:cx=:fn=01;38;5;132:ln=32:bn=32:se=00;38;5;242"
fi
