ARG BASEIMG=centos_7_dev:latest
FROM gwangmin/$BASEIMG

ARG CFLAGS="-march=core2 -O2 -pipe"

RUN yum update -y && \
      yum install -y epel-release sudo && \
      useradd -m -G wheel -s /bin/bash gmlee && passwd -d gmlee && \
      chmod +w /etc/sudoers && \
      echo -e "gmlee\tALL=(ALL:ALL)\tNOPASSWD:ALL" >> /etc/sudoers && \
      chmod -w /etc/sudoers
USER gmlee

RUN export CFLAGS=$CFLAGS CXXFLAGS=$CFLAGS && \
        cd $HOME && \
        git clone https://github.com/aiqu/devsetting.git && \
        cd devsetting && bash base.sh && \
        sudo yum clean all && sudo rm -rf /var/cache/yum
