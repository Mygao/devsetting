FROM gwangmin/centos_7_dev:latest

ARG CFLAGS="-O2 -pipe"

RUN export CFLAGS=$CFLAGS CXXFLAGS=$CFLAGS && \
        cd $HOME && \
        git clone --depth 1 https://github.com/aiqu/devsetting.git && \
        cd devsetting && bash install_scripts/gcc5.sh && \
        cd $HOME && rm -rf devsetting
